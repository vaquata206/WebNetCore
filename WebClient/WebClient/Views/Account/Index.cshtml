
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Account/_Layout.cshtml";
}
<div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>
    <form action="/login" method="post" validate="true" show-loader="true">
        <div class="form-group has-feedback">
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            <input type="text" class="form-control" placeholder="Username" name="username" required minlength="3">
        </div>
        <div class="form-group has-feedback">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            <input type="password" class="form-control" placeholder="Password" name="password" required minlength="3">
        </div>
        <div class="row">
            <div class="col-xs-8">
                <div class="checkbox icheck">
                    <label>
                        <input type="checkbox" id="rememberMe" name="rememberMe" value="true"> Remember Me
                    </label>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
            </div>
            <!-- /.col -->
        </div>
    </form>
    <!--
    <div class="social-auth-links text-center">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
            <i class="fa fa-facebook"></i> Sign in using
            Facebook
        </a>
        <a href="#" class="btn btn-block btn-social btn-google btn-flat">
            <i class="fa fa-google-plus"></i> Sign in using
            Google+
        </a>
    </div>
        -->
    @{
        if (!string.IsNullOrEmpty(ViewBag.MessageError))
        {
            <div class="text-danger validation-summary-errors">
                <ul>
                    <li>@ViewBag.MessageError</li>
                </ul>
            </div>
        }
    }
    <!-- /.social-auth-links -->
    @*<a href="#">I forgot my password</a><br>
        <a href="register.html" class="text-center">Register a new membership</a>*@
</div>
